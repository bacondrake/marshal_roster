source 'http://rubygems.org'

gem 'bcrypt' # Hashes user's passwords
gem 'bootstrap-sass'
gem 'coffee-rails', '~> 4.0.0'
gem 'faker' # Allows you to seed database with sample marshals and exams
gem 'jbuilder', '~> 2.0'
gem 'jquery-rails'
gem 'jquery-turbolinks' # Required for mailto: JavaScript on the marshals#show page to work correctly without reloading the page
gem 'kaminari'
gem 'rails', '4.1.0'
gem 'sass-rails', '~> 4.0.3'
gem 'sdoc', '~> 0.4.0',          group: :doc
gem 'sqlite3'
gem 'turbolinks'
gem 'twitter-bootstrap-rails'
gem 'uglifier', '>= 1.3.0'
gem 'will_paginate-bootstrap'

group :development, :test do
  gem 'byebug' # debugging info for Rails 4 (add 'debugger' (no quotes) to code that may be causing trouble - to debug in console)
  gem 'capistrano' # cap production deploy:migrations => puts dev database into prod
  gem 'hirb'
  gem 'rspec-rails'
end
