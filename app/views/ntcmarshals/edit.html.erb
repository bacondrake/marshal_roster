<h1>Edit marshal</h1>

<%= form_for @ntcmarshal do |f| %>
  <% if @ntcmarshal.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@ntcmarshal.errors.count, "error") %> prohibited this marshal from being saved:</h2>
    <ul>
    <% @ntcmarshal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-4">
      <p>
        <%= hidden_field_tag("ntcmarshal[exam_ids][]", nil) %>
        <% @exams.each do |exam| %>
          <div>
            <%= check_box_tag "ntcmarshal[exam_ids][]", exam.id, @ntcmarshal.exams.include?(exam) %>
            <%= exam.date %>
          </div>
        <% end %>
      </p>
    </div>

      <div class="col-md-5">
        <p class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "long-field" %>
        </p>

        <p class="form-group">
          <%= f.label :phone %><br />
          <%= f.text_field :phone, class: "long-field" %>
        </p>

        <p class="form-group">
          <%= f.label :email %><br />
          <%= f.text_field :email, class: "long-field" %>
        </p>

        <p class="form-group">
          <%= f.label :address %><br />
          <%= f.text_area :address, class: "long-area" %>
        </p>

        <p>
          <%= f.submit "Update", class: "btn btn-success" %> &nbsp;
          <%= link_to 'View all marshals', ntcmarshals_path, class: 'btn btn-primary' %>
        </p> 
      </div>
    </div>
  </div>

<% end %>

