<!DOCTYPE html>
<html>
  <head>
    <title>Ntcmarshals</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="row">
      <div class="col-md-3">
        <%= render 'layouts/header' %>
      </div>

      <div class="container">
      <div class="col-md-9">
        <br />
        <% flash.each do |name, msg| %>
          <%= content_tag(:div, class: "alert alert-info alert-dismissable") do %>
            <%= msg %>
            <span type="button" class="close" data-dismiss="alert">&times;</span>
          <% end %>
        <% end %>


        <%= yield %>
      </div>
    </div>
  </body>
</html>
