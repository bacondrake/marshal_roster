<h1 style="text-align:center">Update your profile</h1>

<div class="col-md-offset-3">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "long-field form-control" %>
    </p>

    <p>
      <%= f.label :phone, "Phone number" %><br />
      <%= f.text_field :phone, class: "long-field form-control" %>
    </p>

    <p>
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "long-field form-control" %>
    <p>

    <p>
      <%= f.label :password %><br/>
      <small><em>Leave blank if you do not want to change your password</em></small><br />
      <%= f.password_field :password, class: "long-field form-control" %>
    </p>

    <p>
      <%= f.label :password_confirmation, "Confirmation" %><br />
      <small><em>Leave blank if you do not want to change your password</em></small><br />
      <%= f.password_field :password_confirmation, class: "long-field form-control" %>
    </p>
    <br />

    <%= f.submit "Save changes", class: "btn btn-success" %> &nbsp;
    <%= link_to "Back", user_path, class: "btn btn-primary" %> &nbsp;
    <%= link_to "Delete", @user, class: 'btn btn-danger', method: :delete,
    data: { confirm: "This will permanently remove your profile. Are you sure?" } %>

  <% end %>
</div>
